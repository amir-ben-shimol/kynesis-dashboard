{
	"ignore": ["inflint.config.cjs", "czvinyl.config.ts", "scripts/onboarding.js", "release.config.cjs"],
	"ignoreDependencies": ["commitizen"],
	"ignoreBinaries": ["only-allow", "concurrently", "magenta,blue", "playwright", "storybook:build", "storybook:test"],
	"workspaces": {
